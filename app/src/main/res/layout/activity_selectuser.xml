    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="Select any one option to continue!"
        android:textColor="@color/primary_color"
        android:textSize="16sp" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2" />

    <RelativeLayout
        android:id="@+id/select_user_type_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:background="@drawable/select_user_type_btn_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">



        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/select_user_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_user_profile"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_toEndOf="@id/select_user_type_icon"
            android:layout_centerVertical="true">

            <TextView
                android:id="@+id/be_a_user_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be A User"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/intro_screen_dialog_text"
                android:textSize="14sp"
                android:text="Buy Medicines and products in Cheap Prices ."

                android:layout_below="@id/be_a_user_text"
                android:layout_marginEnd="40dp"/>
        </RelativeLayout>
    </RelativeLayout>
    <RelativeLayout
        android:id="@+id/select_vendor_type_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:paddingHorizontal="@dimen/_10sdp"
        android:layout_marginTop="20dp"
        android:background="@drawable/select_user_type_btn_background"
        android:clickable="true"
        android:focusable="true"
        android:foreground="?attr/selectableItemBackground">

        <ImageView
            android:id="@+id/select_vendor_type_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_vendor_img"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true"
            android:layout_toEndOf="@id/select_vendor_type_icon">

            <TextView
                android:id="@+id/be_a_vendor_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Be A Vendor"
                android:textColor="@color/primary_color"
                android:textSize="20sp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Create your store and sell your items in an easy way."
                android:textColor="@color/intro_screen_dialog_text"
                android:textSize="14sp"
                android:layout_below="@id/be_a_vendor_text"
                android:layout_marginEnd="40dp"/>
        </RelativeLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />
    <com.google.android.material.button.MaterialButton
        android:id="@+id/main_screen_signin_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:background="@drawable/contiune_select_type_btn"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textAppearance="@style/MyTextAppearance"
        android:theme="@style/colorControlHighlight_blue"
        app:backgroundTint="@null"
        android:focusable="false"
        android:visibility="gone"/>
    <RelativeLayout
        android:id="@+id/inactive_contiune_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/signup_screen_signin_btn_background"
        android:layout_marginTop="16dp"
        android:layout_marginHorizontal="@dimen/_10sdp"
        android:gravity="center_vertical">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Continue"
            android:textAllCaps="false"
            android:textColor="@color/primary_color"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:textAppearance="@style/MyTextAppearance"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="8" />

</LinearLayout>




