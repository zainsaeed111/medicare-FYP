        <LinearLayout
            android:id="@+id/layerItem"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/_10sdp"
            android:layout_marginTop="16dp"
            android:orientation="vertical"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">


            <TextView
                android:id="@+id/tvinobxName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Joanne"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold">

            </TextView>


            <TextView
                android:id="@+id/tvInobxMessage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hi Alvin, howâ€™s work progress going?..."
                android:textSize="@dimen/_10sdp">

            </TextView>


        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_8sdp"
            android:layout_marginTop="@dimen/_10sdp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tvInboxTime"
            app:srcCompat="@drawable/chat_notification_icon" />

        <TextView
            android:id="@+id/tvInboxTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginEnd="@dimen/_10sdp"
            android:text="7h"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:visibility="gone"
            android:id="@+id/imageView4"
            android:layout_width="@dimen/_300sdp"
            android:layout_height="wrap_content"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.0"
            app:srcCompat="@drawable/chat_row_divider_line" />


    </androidx.constraintlayout.widget.ConstraintLayout>


</LinearLayout>